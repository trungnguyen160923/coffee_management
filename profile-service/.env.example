# ============================================
# SERVER CONFIGURATION
# ============================================
# Port mà service sẽ chạy
SERVER_PORT=8003

# Context path của service
SERVER_CONTEXT_PATH=/profiles

# ============================================
# SPRING CONFIGURATION
# ============================================
# HTTP Encoding charset
SPRING_HTTP_ENCODING_CHARSET=UTF-8

# HTTP Encoding enabled
SPRING_HTTP_ENCODING_ENABLED=true

# HTTP Encoding force
SPRING_HTTP_ENCODING_FORCE=true

# ============================================
# DATABASE CONFIGURATION
# ============================================
# Database connection URL
DB_URL=jdbc:mysql://localhost:3306/profile_db?useSSL=false&allowPublicKeyRetrieval=true&serverTimezone=Asia/Ho_Chi_Minh&useUnicode=true&characterEncoding=UTF-8

# Database username
DB_USERNAME=root

# Database password (REQUIRED - không có default)
DB_PASSWORD=your_database_password_here

# JPA DDL Auto mode (none, validate, update, create, create-drop)
JPA_DDL_AUTO=update

# Show SQL queries in logs
JPA_SHOW_SQL=true

# ============================================
# KAFKA CONFIGURATION
# ============================================
# Kafka bootstrap servers
KAFKA_BOOTSTRAP_SERVERS=localhost:9094

# Kafka consumer group ID
KAFKA_CONSUMER_GROUP=profile-service-group

# Kafka auto offset reset (earliest, latest, none)
KAFKA_AUTO_OFFSET_RESET=earliest

# Kafka trusted packages for JSON deserializer
KAFKA_JSON_TRUSTED_PACKAGES=com.service.profile.events,com.service.auth.events

# ============================================
# JWT CONFIGURATION
# ============================================
# JWT signer key (REQUIRED - không có default)
JWT_SIGNER_KEY=your_jwt_signer_key_here

# ============================================
# EXTERNAL SERVICES URL
# ============================================
# Order Service URL
ORDER_SERVICE_URL=http://localhost:8002/order-service

# Auth Service URL
AUTH_SERVICE_URL=http://localhost:8001/auth-service

# Notification Service URL
NOTIFICATION_SERVICE_URL=http://localhost:8006/notification-service

# ============================================
# PAYROLL CONFIGURATION
# ============================================
# Số giờ làm việc tối đa trong 1 ngày (theo quy định lao động VN)
PAYROLL_MAX_DAILY_HOURS=8

# Giảm trừ gia cảnh bản thân (VNĐ/tháng)
PAYROLL_PERSONAL_DEDUCTION=11000000

# Giảm trừ gia cảnh cho người phụ thuộc (VNĐ/người/tháng)
PAYROLL_DEPENDENT_DEDUCTION=4400000

# Tỷ lệ đóng bảo hiểm (BHXH 8% + BHYT 1.5% + BHTN 1% = 10.5%)
PAYROLL_INSURANCE_RATE=0.105

# Hệ số OT mặc định (ngày thường)
PAYROLL_DEFAULT_OT_RATE=1.5

# Hệ số OT cho cuối tuần (Thứ 7, CN) - nhân với default rate (1.5 × 1.33 ≈ 2.0x)
PAYROLL_WEEKEND_OT_MULTIPLIER=1.33

# Hệ số OT cho ngày lễ/Tết - nhân với default rate (1.5 × 2.0 = 3.0x)
PAYROLL_HOLIDAY_OT_MULTIPLIER=2.0

# Số ngày công chuẩn trong tháng (để tính lương full-time)
PAYROLL_STANDARD_DAYS=26

# Số giờ công chuẩn trong ngày (để tính lương full-time)
PAYROLL_STANDARD_HOURS=8

# ============================================
# SHIFT VALIDATION RULES
# ============================================
# Số giờ làm việc tối đa trong 1 ngày
SHIFT_MAX_DAILY_HOURS=8

# Số giờ làm việc tối đa trong 1 tuần
SHIFT_MAX_WEEKLY_HOURS=40

# Số giờ nghỉ tối thiểu giữa 2 ca (ca đêm)
SHIFT_MIN_REST_NIGHT=12

# Số giờ nghỉ tối thiểu giữa 2 ca (ca ngày)
SHIFT_MIN_REST_DAY=10

# Số ca tối đa trong 1 ngày
SHIFT_MAX_PER_DAY=2

# Số ca tối đa trong 1 tuần
SHIFT_MAX_PER_WEEK=6

# Số ngày làm việc liên tiếp tối đa
SHIFT_MAX_CONSECUTIVE=6

# Thời lượng ca làm việc tối đa (giờ)
SHIFT_MAX_DURATION=10

# Thời lượng ca làm việc tối thiểu (giờ)
SHIFT_MIN_DURATION=2

# Số giờ OT tối đa trong 1 tuần
SHIFT_MAX_OT_WEEK=12

# Số giờ OT tối đa trong 1 ngày (theo quy định lao động VN: 8h + 4h = 12h/ngày)
SHIFT_MAX_OT_DAY=4

# Số ngày cuối tuần tối đa trong 1 tuần
SHIFT_MAX_WEEKEND_DAYS=1

# Số tháng tối đa có thể đăng ký ca trước
SHIFT_MAX_MONTHS_ADVANCE=3

# ============================================
# SWAGGER/OPENAPI CONFIGURATION
# ============================================
# Enable Swagger UI (set to false in production)
SWAGGER_ENABLED=true