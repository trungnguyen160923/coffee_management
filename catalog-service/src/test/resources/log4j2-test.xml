<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <!-- Console Appender -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
        
        <!-- File Appender for all logs -->
        <RollingFile name="TestFile" fileName="target/test-logs/test-output.log"
                     filePattern="target/test-logs/test-output-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="10MB"/>
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>
        
        <!-- File Appender for errors only -->
        <RollingFile name="ErrorFile" fileName="target/test-logs/test-errors.log"
                     filePattern="target/test-logs/test-errors-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n%throwable"/>
            <ThresholdFilter level="ERROR" onMatch="ACCEPT" onMismatch="DENY"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="10MB"/>
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>
        
        <!-- File Appender for GoodsReceiptService tests specifically -->
        <RollingFile name="GoodsReceiptTestFile" fileName="target/test-logs/goods-receipt-test.log"
                     filePattern="target/test-logs/goods-receipt-test-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n%throwable"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="10MB"/>
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>
    </Appenders>
    
    <Loggers>
        <!-- GoodsReceiptService logger - detailed logging -->
        <Logger name="com.service.catalog.service.GoodsReceiptService" level="DEBUG" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="GoodsReceiptTestFile"/>
            <AppenderRef ref="ErrorFile"/>
        </Logger>
        
        <!-- Test class logger -->
        <Logger name="com.service.catalog.service.GoodsReceiptServiceTest" level="DEBUG" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="GoodsReceiptTestFile"/>
            <AppenderRef ref="ErrorFile"/>
        </Logger>
        
        <!-- Mockito logger -->
        <Logger name="org.mockito" level="INFO" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="TestFile"/>
        </Logger>
        
        <!-- Root logger -->
        <Root level="INFO">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="TestFile"/>
            <AppenderRef ref="ErrorFile"/>
        </Root>
    </Loggers>
</Configuration>

