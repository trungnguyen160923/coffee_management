# ==========================================
# 1. SERVER CONFIGURATION
# ==========================================
HOST=0.0.0.0
PORT=8005

# ==========================================
# 2. SERVICE DISCOVERY & EXTERNAL URLS
# ==========================================
ORDER_SERVICE_URL=http://localhost:8002
CATALOG_SERVICE_URL=http://localhost:8004

# ==========================================
# 3. DATABASE CONFIGURATION (MySQL)
# ==========================================
DB_HOST=localhost
DB_PORT=3306
DB_USER=root

DB_PASSWORD=12345678
DB_NAME=analytics_db

# ==========================================
# 4. AI & LLM CONFIGURATION (OpenAI via Proxy)
# ==========================================
AI_PROVIDER=openai
OPENAI_API_KEY=
OPENAI_BASE_URL=
OPENAI_MODEL=
OPENAI_TEMPERATURE=
OPENAI_MAX_TOKENS=

# ==========================================
# 5. EMAIL & NOTIFICATION (SMTP)
# ==========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
# Mật khẩu ứng dụng (App Password)
SMTP_PASSWORD=
SMTP_FROM_EMAIL=
SMTP_USE_TLS=true

# Report Settings
MANAGER_EMAIL=
ENABLE_EMAIL_DISTRIBUTION=true

# ==========================================
# 6. ANOMALY DETECTION (Isolation Forest)
# ==========================================
IFOREST_TRAINING_DAYS=180
IFOREST_N_ESTIMATORS=200
IFOREST_CONTAMINATION=0.1
# Các tham số retrain mới từ File 2
MODEL_RETRAIN_FREQUENCY_DAYS=7
MIN_TRAINING_SAMPLES=30

# ==========================================
# 7. FORECASTING (Prophet)
# ==========================================
# File 2 dùng 180 ngày (tốt hơn 120 ngày của File 1)
FORECAST_TRAINING_DAYS=180
FORECAST_TARGET_METRIC=order_count
FORECAST_ALGORITHM=PROPHET
FORECAST_MODEL_VERSION=v1.0
FORECAST_CREATED_BY=scheduler
FORECAST_YEARLY_SEASONALITY=true
FORECAST_WEEKLY_SEASONALITY=true
FORECAST_USE_REGRESSORS=true
FORECAST_SEASONALITY_MODE=multiplicative